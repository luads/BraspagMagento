<config>
    <sections>
        <payment translate="label" module="payment">
            <groups>
                <braspag translate="label">
                    <label>Braspag</label>

                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                    
                    <fields>
                        <merchant_id translate="label">
                            <label>Merchant ID</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </merchant_id>

                        <service translate="label">
                          <label>WebService Braspag</label>
                          <frontend_type>select</frontend_type>
                          <source_model>Tapronto_Braspag_Model_Payment_Service</source_model>
                          <sort_order>2</sort_order>
                          <show_in_default>1</show_in_default>
                          <show_in_website>1</show_in_website>
                          <show_in_store>0</show_in_store>
                        </service>
                        
                        <ws_amex translate="label">
                          <label>WebService American Express</label>
                          <frontend_type>select</frontend_type>
                          <source_model>Tapronto_Braspag_Model_Payment_Method</source_model>
                          <sort_order>3</sort_order>
                          <show_in_default>1</show_in_default>
                          <show_in_website>1</show_in_website>
                          <show_in_store>0</show_in_store>
                        </ws_amex>     
                                           
                        <ws_visa translate="label">
                          <label>WebService Visa</label>
                          <frontend_type>select</frontend_type>
                          <source_model>Tapronto_Braspag_Model_Payment_Method</source_model>
                          <sort_order>4</sort_order>
