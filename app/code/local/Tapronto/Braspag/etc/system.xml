                          <show_in_website>1</show_in_website>
                          <show_in_store>0</show_in_store>
                        </ws_visa>       
                                                            
                        <ws_master translate="label">
                          <label>WebService MasterCard</label>
                          <frontend_type>select</frontend_type>
                          <source_model>Tapronto_Braspag_Model_Payment_Method</source_model>
                          <sort_order>5</sort_order>
                          <show_in_default>1</show_in_default>
                          <show_in_website>1</show_in_website>
                          <show_in_store>0</show_in_store>
                        </ws_master>
                        
                        <parcelamento translate="label">
                          <label>Tipo de parcelamento</label>
                          <frontend_type>select</frontend_type>
                          <source_model>Tapronto_Braspag_Model_Payment_Parcela</source_model>
                          <sort_order>6</sort_order>
                          <show_in_default>1</show_in_default>
                          <show_in_website>1</show_in_website>
                          <show_in_store>0</show_in_store>
                        </parcelamento>
